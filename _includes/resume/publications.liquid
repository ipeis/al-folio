<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign publications = data[1] | sort: 'date' | reverse %}
  {% for publication in publications %}
  <li class="list-group-item">
      <div class="row">
          <div class="col-xs-2 cl-sm-2 col-md-2 text-center" style="width: 75px;">
              <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px;">
                  {{ publication.date }}
              </span>
          </div>
          <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
              <h6 class="title font-weight-bold ml-1 ml-md-4">{{ publication.title }}</h6>
              <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem;">
                  {{ publication.authors | join: ', ' }}. 
                  {{ publication.publication }}
              </h6>
              <p class="links ml-1 ml-md-4">
                  {% for link in publication.links %}
                  <a href="{{ link.url }}">{{ link.type }}</a>&nbsp;|&nbsp;
                  {% endfor %}
              </p>
          </div>
      </div>
  </li>
  {% endfor %}
</ul>
